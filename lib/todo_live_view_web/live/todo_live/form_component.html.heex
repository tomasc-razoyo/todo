<div>
  <.simple_form
    for={@form}
    id="todo-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save"
  >
    <.input field={@form[:text]} type="text" label="Text" />
    <:actions>
      <.button phx-disable-with="Adding...">Add Todo</.button>
    </:actions>
  </.simple_form>
</div>
